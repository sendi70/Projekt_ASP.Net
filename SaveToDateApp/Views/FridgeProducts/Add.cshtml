@using SaveToDateApp.Enum
@model FridgeProductModel

@{
    ViewData["Title"] = "Add product";
}

<div class="row">
    <div class="col-md-8 text-center">
        <h1>Add product</h1>
    </div>
    <div class="row text-center">
        <div class="col-md-6 mx-auto">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row text-center mx-auto">
                    <div class="col-md-12 mx-auto">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpirationDate" class="control-label"></label>
                            <input asp-for="ExpirationDate" type="date" class="form-control"/>
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FridgeCategoryEnum" class="control-label"></label>
                            <select asp-for="FridgeCategoryEnum" asp-items="Html.GetEnumSelectList<FridgeCategoryEnum>()" class="form-control"></select>
                            <span asp-validation-for="FridgeCategoryEnum" class="text-danger"></span>
                        </div>

                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-outline-success float-right"/>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>